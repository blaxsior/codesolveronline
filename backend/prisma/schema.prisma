// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Problem {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  tests       TestCase[]
  initCodes   InitCode[]
  PInitCodes  PInitCodes[]
}

model TestCase {
  pid     Int     @id
  problem Problem @relation(fields: [pid], references: [id], onDelete: Cascade)
  input   String
  output  String
  type    String
  // 테스트 케이스의 목적이 맞는 것인지 아닌지 여부
  // t, f 등으로 나타낼 예정
}

model InitCode {
  id         Int          @id
  type       String
  code       String
  problems   Problem[]
  PInitCodes PInitCodes[]
}

model PInitCodes {
  problem  Problem  @relation(fields: [pid], references: [id])
  pid      Int
  initcode InitCode @relation(fields: [cid], references: [id])
  cid      Int

  @@id([pid, cid])
}
